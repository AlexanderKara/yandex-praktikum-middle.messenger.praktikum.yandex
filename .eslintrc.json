{
"extends": [
  "airbnb-base",
  "airbnb-typescript/base"
],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "sourceType": "module",
    "tsconfigRootDir": "../",
    "project": ["tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "alias": {
        "map": [["~", "./src/"]],
        "extensions": [".ts", ".js", ".tsx"]
      }
    }
  },
  "rules": {
    "max-len": [2, 120],
    "max-params": [2, 3],
    "@typescript-eslint/no-unused-vars": 2,
    "import/extensions": "off"
  }
}
